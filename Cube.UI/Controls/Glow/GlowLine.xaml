<UserControl
    x:Class="Cube.UI.Controls.Glow.GlowLine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Cube.UI.Controls.Glow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <toolkit:DropShadowPanel
        BlurRadius="16"
        ShadowOpacity="0.33"
        Color="{ThemeResource SystemAccentColorLight3}">
        <Grid
            Width="{x:Bind Width, Mode=OneWay}"
            Height="{x:Bind Height, Mode=OneWay}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{ThemeResource AccentLinearDownGradientBrush}"
            CornerRadius="2" />
    </toolkit:DropShadowPanel>
</UserControl>
