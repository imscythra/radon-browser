                        x:Name="controlCenterToggleButton"
                        Grid.Column="1"
                        Margin="0,4,5,0"
                        Padding="7"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="{x:Null}"
                        Click="controlCenterToggleButton_Click"
                        Visibility="Collapsed">
                        <FontIcon
